@model Jonesware.WeightTracker.WebApp.ViewModels.WeighIn.CreateViewModel

@{
	ViewBag.Title = "New Weigh In";
}

<div class="page-header"><h1>New Weigh In</h1></div>

<div class="row">
	<div class="col-sm-7">
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="box box-solid box-blue">
				<div class="box-body">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })

					<fieldset>
						<div class="form-group">
							<label for="Weight" class="control-label">Weight:</label>
							@Html.EditorFor(m => m.Weight, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "0.1", @min = "0", @max = "1000", placeholder = "Weight (lbs)" } })
							@Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
						</div>

						<div class="form-group">
							<label for="DateRecorded" class="control-label">Date Recorded:</label>
							@Html.EditorFor(model => model.DateRecorded, new { htmlAttributes = new { @class = "form-control", placeholder = "Date Recorded" } })
							@Html.ValidationMessageFor(model => model.DateRecorded, "", new { @class = "text-danger" })
						</div>
					</fieldset>
				</div>

				<div class="box-footer">
					<div class="form-group">
						<button type="submit" class="btn btn-flat bg-blue">Save</button>
						<a class="pull-right btn btn-default btn-flat" href="@Url.Action("Dashboard", "Page")">Cancel</a>
					</div>
				</div>
			</div>
		}
	</div>

	<div class="col-sm-5"></div>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}