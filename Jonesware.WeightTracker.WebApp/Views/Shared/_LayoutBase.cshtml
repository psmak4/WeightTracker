<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Weight Tracker</title>
	<link href="//fonts.googleapis.com/css?family=Special+Elite" rel="stylesheet">
	<link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
	<link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" />
	<link href="//cdnjs.cloudflare.com/ajax/libs/datatables/1.10.9/css/dataTables.bootstrap.min.css" rel="stylesheet" />
	<link href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css" rel="stylesheet" />
	<link href="~/css/lib.min.css" rel="stylesheet" />
	<link href="~/css/app.min.css" rel="stylesheet" />
	<script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
	@RenderSection("head", required: false)
</head>
<body class="layout-top-nav skin-blue">
	<header class="main-header">
		<nav class="navbar navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<a href="/" class="navbar-brand">Weight Tracker</a>
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
						<i class="fa fa-bars"></i>
					</button>
				</div>
				<div class="collapse navbar-collapse" id="navbar-collapse">
					@Html.Partial("_LoginPartial")
				</div>
			</div>
		</nav>
	</header>

	<main>
		@RenderBody()
	</main>

	<footer class="main-footer">
		<div class="container">
			<p>&copy; @DateTime.Now.Year Weight Tracker. All rights reserved.</p>
		</div>
	</footer>

	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/js/bootstrap.min.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>