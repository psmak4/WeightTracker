@model Jonesware.WeightTracker.WebApp.Models.ForgotPasswordViewModel
@{
	ViewBag.Title = "Forgot your password?";
}

<div class="page-header"><h1>Forgot your password?</h1></div>

<div class="row">
	<div class="col-sm-7">
		@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
		{
			@Html.AntiForgeryToken()

			<div class="box box-solid box-blue">
				<div class="box-body">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })

					<fieldset>
						<div class="form-group">
							<label for="Email" class="control-label">Email:</label>
							@Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
							@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
						</div>
					</fieldset>
				</div>

				<div class="box-footer">
					<div class="form-group">
						<button type="submit" class="btn btn-flat bg-blue">Email Link</button>
					</div>
				</div>
			</div>
		}
	</div>
	<div class="col-sm-5"></div>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}