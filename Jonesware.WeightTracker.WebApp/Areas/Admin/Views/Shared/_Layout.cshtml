<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Weight Tracker Admin</title>
	<link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
	<link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" />
	<link href="//cdnjs.cloudflare.com/ajax/libs/datatables/1.10.9/css/dataTables.bootstrap.min.css" rel="stylesheet" />
	<link href="/css/lib.min.css" rel="stylesheet" />
	<link href="/css/admin.min.css" rel="stylesheet" />
	<script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
	@RenderSection("head", required: false)
</head>
<body class="hold-transition skin-blue layout-top-nav">
	<div class="wrapper">
		<header class="main-header">
			<nav class="navbar navbar-static-top">
				<div class="container">
					<div class="navbar-header">
						<a href="@Url.Action("Index", "Dashboard")" class="navbar-brand">Weight Tracker Admin</a>
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
							<i class="fa fa-bars"></i>
						</button>
					</div>

					<div class="collapse navbar-collapse pull-left" id="navbar-collapse">
						<ul class="nav navbar-nav">
							<li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
							<li><a href="@Url.Action("Index", "User")">Users</a></li>
						</ul>
					</div>

					<div class="navbar-custom-menu">
						<ul class="nav navbar-nav">
							<li>
								<a href="@Url.Action("Index", "Manage", new { area = "" })">@User.Identity.GetFirstName() @User.Identity.GetLastName()</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>

		<main class="content-wrapper">
			<div class="container">
				@Html.Action("Messages", "Page", new { area = "" })
				@RenderBody()
			</div>
		</main>

		<footer class="main-footer">
			<div class="container">
				<strong>Copyright &copy; @DateTime.Now.Year <a href="http://www.weighttracker.com">Weight Tracker</a>.</strong> All rights reserved.
			</div>
		</footer>
	</div>

	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/js/bootstrap.min.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>